
@import '/zanui/panel.wxss';
@import '/zanui/col.wxss';
@import '/zanui/row.wxss';
@import '/zanui/btn.wxss';

.zan-col {
  line-height: 30px;
  text-align: center;
  background-color: #39a9ed;
  font-size: 12px;
  color: #fff;
}

.zan-col:nth-child(even) {
  background-color: #66c6f2;
}
.recorder {
  width: 100%;
  position: absolute;
  bottom: 0;
  padding-bottom: 1rem;
  padding-top: 15px;
}
.showcontent {
  display: inline;
}
.hidecontent {
  display: none;
}
